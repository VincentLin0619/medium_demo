<h1 class="title">新增故事</h1>
<%= form_for @story do |f| %>
  <div class="feild">
    <%= f.label :title, '標題', class: 'label' %>
    <%= f.text_field :title, class: 'input is-medium is-primary autofocus' %>
  </div>
  <div class="field">
    <%= f.label :content, '內容', class: 'label' %>
    <%= f.text_area :content, class: 'textarea is-medium is-primary' %>
  </div>
  <div class="field">
    <%= f.submit '儲存草稿', class: 'button is-light is-medium' %>
    <%= f.submit '發布文章', class: 'button is-primary is-medium' %>
  </div>
<% end %>
